#include <iostream>
using namespace std;

int main() {
    /*  Read input as specified in the question.
     * Print output as specified in the question.
     */
    int n,b;
    cin >> n;
    for(int i=1;i<=n;i++)
    {
        int num = i;
        for(int k=1;k<=n-i;k++)
        {
            cout << ' ';
        }
        for(int j=1;j<=i;j++)
        {
        
            cout << num;
            num++;
        }
      num = num -2;
        for(int j=1;j<=i-1;j++)
        {
            
            cout<< num ;
            num--;
        }
        cout<<endl;
            
    }
}
