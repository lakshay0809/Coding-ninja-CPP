#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
   int n;
    cin >> n;
    for(int i=1;i<=n;i++)
    {
        for(int k=1;k<=n-i;k++)
        {
            cout<<' ';
        }
        for(int j=1;j<=i;j++)
        {
            cout << '*';
        }
        for(int m=1;m<=i-1;m++)
        {
            cout<<'*';
        }
        cout<<endl;
    }
}

