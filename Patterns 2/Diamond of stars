#include<cmath>
#include<iostream>
using namespace std;


int main() {
    
    /*  Read input as specified in the question.
     * Print output as specified in the question.
     */
    int n,j;
    cin>>n;
    int x=(n+1)/2;
    for(int i=1;i<=x;i++)
    {
        for(j=1;j<=x-i;j++)
        {
            cout << " ";
        }
        for(j=1;j<=2*i-1;j++)
        {
            cout<< '*';
        }

        cout<<endl;
    }
    for(int i=1;i<=n-x;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout<< ' ';
        }
        for(j=1;j<=2*(n-x-i+1)-1;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    
    
}
