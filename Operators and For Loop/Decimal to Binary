#include<iostream>
using namespace std;

int main() {
	// Write your code here
     int n;
    cin >> n;
    int i=0,j;
    int arr[20];
    if(n==0)
    {
        cout << 0;
    }
    while(n>0)
    {
        arr[i]= n%2;
        n=n/2;
        i++;
    }
    for(j=i-1;j>=0;j--)
    {
        cout << arr[j];
    }
    
	
}
