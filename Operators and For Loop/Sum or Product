#include<iostream>
using namespace std;

int main() {
	// Write your code here
    int n,x,sum=0,pro=1;
    cin >> n>>x;
    if(x==1)
    {
        for(int i=1;i<=n;i++)
        {
            sum += i;
        }
        cout << sum;
    }
    else if(x==2)
    {
        for(int i=1;i<=n;i++)
        {
            pro = pro * i;
        }
        cout << pro;
    }
	else {
        cout << -1;
    }
}
