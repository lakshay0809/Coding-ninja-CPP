#include<iostream>
using namespace std;

int main(){

    /* Read input as specified in the question.
	 * Print output as specified in the question.
	 */
     char c;
    int ch=0,x=0,num=0;
    c = cin.get();
    while(c !='$')
    {
        
        if(c>=97 && c<=122)
        {
            ch++;
        }
        else if(c>=48 && c<=57)
        {
            num ++;
        }
        else   {
            x++;
        }
        
       c = cin.get();
    }
    cout << ch << ' ' << num << ' ' << x <<endl;
}
