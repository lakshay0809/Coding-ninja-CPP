bool checkPalindrome(char str[]) {
    // Write your code here
    int c=0,flag=0;
    for(int i=0;str[i]!='\0';i++)
    {
        c++;
    }
   
    for(int i=0;i<c;i++)
    {
        if(str[i]==str[c-i-1])
        {
            flag = 1;
        }
        else 
        {
            flag = 0;
            break;
        }
    }
    if(flag==1)
    {
        return 1;
    }
        return 0;
    
}
